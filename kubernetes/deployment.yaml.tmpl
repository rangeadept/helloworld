apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: $APP_NAME

spec:
  replicas: 1
  template:
    metadata:
      name: $APP_NAME
      labels:
        app: $APP_NAME
        track: stable
        git_commit: $SHORT_SHA1

    spec:
      containers:
      - name: $APP_NAME
        image: gcr.io/$PROJECT_NAME/$APP_NAME:$SHORT_SHA1
        ports:
        - containerPort: 8080
        readinessProbe:
          httpGet:
            path: /view/health
            port: 8080
