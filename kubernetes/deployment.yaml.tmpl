apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: helloworld

spec:
  replicas: 1
  template:
    metadata:
      name: helloworld
      labels:
        app: helloworld
        track: stable
        git_commit: $SHORT_SHA1

    spec:
      containers:
        - name: helloworld
          image: gcr.io/$PROJECT_NAME/$APP_NAME:$SHORT_SHA1
          ports:
            - containerPort: 8080
          readinessProbe:
            httpGet:
              path: /view/health
              port: 8080
